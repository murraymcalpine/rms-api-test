							"let jsonData = pm.response.json();",
							"",
							"pm.test(\"ID field is never empty or null\", function () {",
							"    //Loop through the response checking each entry",
							"    for (let i = 0; i < jsonData.length; i++){",
							"        let id = jsonData[i].id;",
							"        //Verifies each id is populated but if one is not null etc then return meaningful error.",
							"        pm.expect(id, 'item ${i} has an invalid ID').to.not.be.oneOf([null, \"\", undefined]);",
							"    }",
							"});",
							"",
							"pm.test(\"Only one track has 'True' next to 'now_playing'\"), function() {",
							"    //Set variable to cound how many tracks have now_playing set to true.",
							"    let nowPlayingCount = 0;",
							"    //build loop to work through each entry in the response",
							"    for (let i = 0; i < jsonData.length; i++) {",
							"        //if statment to check if the offset.now_playing is true then add one the count.",
							"        if (jsonData[i].offset && jsonData[i].offset.now_playing === true) {",
							"            nowPlayingCount++;",
							"        }",
							"    }",
							"    //Checking that the count only has one entry.",
							"    pm.expect(nowPlayingCount, \"Only one track with now_playing should have true\").to.eql(1);",
							"};"
						],
